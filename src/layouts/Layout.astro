---
import Body from "../components/core/Body/index";
import Footer from "../components/core/Footer/index";
import Header from "../components/core/Header/index.svelte";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <style is:global>
      @import "./../styles/globals.css";
    </style>
    <title>{title} | United Cleaning Corp.</title>
  </head>
  <body>
    <Header client:load />
    <Body client:load><slot /></Body>
    <Footer client:visible />
  </body>
</html>
